                        <div class="form-group">
                            <label for="no_invoice">Invoice</label>
                            <input type="text" readonly="readonly" class="form-control text-black" name="no_invoice"
                                id="no_invoice" required>
                        </div>
                        <div class="form-group">
                            <label for="tanggal">Tanggal</label>
