<script>

    var params = {}

    const readData = (invo) => {
        if (invo) {
            $.ajax({
                method: "GET",
                url: `http://localhost:3001/penjualan/details/${invo}`,
                dataType: "json",
                headers: {
                    json: true
                },
                data: params
            }).done(function (res) {
                
                let totalDetail = res
                let harga = 0

                totalDetail.forEach((item) => {
                    harga += parseInt(item.total_harga)
                })
                $('#total_harga').val(harga);

                let dwitel = res
                let dwi = ''
                dwitel.forEach((item, index) => {
                    dwi += `
        <tr>
            <td>${index + 1}</td>
            <td>${item.barcode}</td>
            <td>${item.qty}</td>
            <td>${item.harga_jual}</td>
            <td>${item.total_harga}</td>
          <td>
            <button type="button" class="btn btn-danger btn-icon-delete" detail_data="${item.id_detail}"><i class="mdi mdi-trash-can btn-icon-append"></i></button>
          </td>
        </tr>
        `
                });
                $('#jual_detail').html(dwi)

            }).fail(function (err) {
                console.log("error", err)
                alert('gagal jquery read detail penjualan modals')
            })


        } else {
            $.ajax({
                method: "GET",
                url: "http://localhost:3001/penjualan",
                dataType: "json",
                headers: {
                    json: true
                },
                data: params
            }).done(function (penjualan) {
                params = { ...params }
                let data1 = penjualan[0]

                let html = ''
                data1.forEach((item, index) => {
                    html += `
        <tr>
            <td>${index + 1}</td>
            <td><a href="#" class="link" id="invoice" datapage="${item.no_invoice}">${item.no_invoice}</a></td>
            <td>${item.tanggal}</td>
            <td>${item.total_harga}</td>
            <td>${item.total_bayar}</td>
            <td>${item.kembalian}</td>
          <td>
            <button type="button" class="btn btn-danger btn-icon-delete" id_data="${item.no_invoice}"><i class="mdi mdi-trash-can btn-icon-append"></i></button>
          </td>
        </tr>
        `
                });

                let data2 = penjualan[1]
                let detail = ''
                data2.forEach((item, index) => {
                    detail += `
        <tr>
            <td>${item.id_detail}</td>
            <td>${item.no_invoice}</td>
            <td>${item.barcode}</td>
            <td>${item.qty}</td>
            <td>${item.harga_jual}</td>
            <td>${item.total_harga}</td>
            <td>
            <button type="button" class="btn btn-danger btn-icon-delete" id_detal="${item.id_detail}"><i class="mdi mdi-trash-can btn-icon-append"></i></button>
          </td>
        </tr>
        `
                });

                let data6 = penjualan[2]
                let varian = '<option disabled selected>Select Barcode</option>'
                data6.forEach((item, index) => {
                    varian += `
        <option value="${item.barcode}">
         ${item.barcode} - ${item.varian_name}
        </option>
        `
                });
                $('#barcode').html(varian)
                $('#detail_penjualan').html(detail)
                $('#penjualan').html(html)


            }).fail(function (err) {
                console.log("error", err)
                alert('gagal jquery read data')
            })
        }

    }

    const varianValue = (barcode) => {

        $.ajax({
            method: "GET",
            url: `http://localhost:3001/penjualan/varian/${barcode}`,
            dataType: "json",
            headers: {
                json: true
            },
            data: params
        }).done(function (penjualan) {
            $("#harga_jual").val(penjualan[0].sell_price)

        }).fail(function (err) {
            console.log("error", err)
            alert('gagal jquery read data varian harga')
        })
    }

    const saveData = (no_invoice, barcode, qty, harga_jual, total_harga_detail) => {
        $.ajax({
            method: "POST",
            url: `http://localhost:3001/penjualan/detail`,
            dataType: "json",
            headers: {
                json: true
            },
            data: { no_invoice, barcode, qty, harga_jual, total_harga_detail }
        }).done(function (response) {

            let invo = response.rows[0].no_invoice
            let barcode = response.rows[0].barcode

            alert(`detail ${barcode} added`)
            $("#form-detail").trigger('reset')
            readData(invo)
        }).fail(function (err) {
            alert('gagal pake jquery save details')
        })
    }
    const saveJual = (no_invoice, total_harga, total_bayar, kembalian) => {
        $.ajax({
            method: "PUT",
            url: `http://localhost:3001/penjualan/pjualan/${no_invoice}`,
            dataType: "json",
            headers: {
                json: true
            },
            data: { no_invoice, total_harga, total_bayar, kembalian }
        }).done(function (response) {
            alert('penjualan telah tertambah')
            $("#form-penjualan").trigger("reset");
            $("#form-detail").trigger("reset");
            $("#close").trigger("click")
            readData()
        }).fail(function (err) {
            console.log(err)
            alert('gagal pake jquery PUT', err)
        })
    }


    const saveInvoice = () => {
        $.ajax({
            method: "POST",
            url: `http://localhost:3001/penjualan/createinvoice`,
            dataType: "json",
            headers: {
                json: true
            },
            data: {}
        }).done(function (response) {
            $("#no_invoice").val(response[0].no_invoice)
            $("#tanggal").val(response[0].tanggal)
            $('#no_invoice1').val(response[0].no_invoice)
            alert('Invoice Created')
        }).fail(function (err) {
            alert('gagal pake jquery save')
        })
    }

    const deleteData = (id) => {
        $.ajax({
            method: "DELETE",
            url: `http://localhost:3001/penjualan/${id}`,
            dataType: "json",
            headers: {
                json: true
            }
        }).done(function (response) {
            
            readData()
        }).fail(function (err) {
            alert('gagal pake jquery delete')
        })

    }

    const deleteDetails = (id_detail) => {
        $.ajax({
            method: "DELETE",
            url: `http://localhost:3001/penjualan/ditel/${id_detail}`,
            dataType: "json",
            headers: {
                json: true
            }
        }).done(function (response) {
            const invo = $('#no_invoice').val()
            if (invo) {
                alert('details deleted')
                readData(invo)
            } else {
                alert('details deleted')
                readData()
            }

        }).fail(function (err) {
            alert('gagal pake jquery delete')
        })
    }

    function getAmount() {
        var qty = $('#qty').val();
        var harga = $('#harga_jual').val();
        $('#total_harga_detail').val(qty * harga);
    }

    function getKembalian() {
        var harga = $('#total_harga').val();
        var bayar = $('#total_bayar').val();
        $('#kembalian').val(bayar - harga);
    }

    $(document).ready(function () {
        readData()

        $('#form-search').submit(function (event) {
            event.preventDefault();
            const searchinvoice = $('#searchinvoice').val()
            const searchdates1 = $('#searchdates1').val()
            const searchdates2 = $('#searchdates2').val()
            console.log(searchinvoice, searchdates1, searchdates2)
            params = { ...params, searchinvoice, searchdates1, searchdates2 }
            readData()
        })

        $('#saveDetails').click(function (event) {
            event.preventDefault();
            const no_invoice = $('#no_invoice').val()
            const barcode = $('#barcode').val()
            const qty = $('#qty').val()
            const harga_jual = $('#harga_jual').val()
            const total_harga_detail = $('#total_harga_detail').val()
            saveData(no_invoice, barcode, qty, harga_jual, total_harga_detail)

        })

        $('#savepenjualan').click(function (event) {
            event.preventDefault();
            const no_invoice = $('#no_invoice').val()
            const total_harga = $('#total_harga').val()
            const total_bayar = $('#total_bayar').val()
            const kembalian = $('#kembalian').val()
            saveJual(no_invoice, total_harga, total_bayar, kembalian)
        })

        $('table tbody').on('click', '.link', function (event) {
            event.preventDefault()
            params = { ...params, noInvoice: $(this).attr('datapage') }
            readData()
        })

        $('table tbody').on('click', '.btn-icon-text', function (event) {
            event.preventDefault()
            alert('Anda mencoba melakukan manipulasi data, silahkan menghadap ke boss anda!')
            readData()
        })

        $('#penjualan').on('click', '.btn-icon-delete', function (event) {
            event.preventDefault()
            const id = $(this).attr('id_data')
            deleteData(id)
        })

        $('#detail_penjualan').on('click', '.btn-icon-delete', function (event) {
            event.preventDefault()
            const id = $(this).attr('id_detal')
            deleteDetails(id)
        })

        $('#jual_detail').on('click', '.btn-icon-delete', function (event) {
            event.preventDefault()
            const detail_id = $(this).attr('detail_data')
            deleteDetails(detail_id)
        })

        $('#reset-form-detail').click(function (event) {
            event.preventDefault()
            $("#form-detail").trigger("reset");
        })

        $('#reset-form-search').click(function (event) {
            event.preventDefault()
            params = {}
            $("#form-search").trigger("reset");
            readData()
        })

        $('#generateinvoice').click(function (event) {
            event.preventDefault()
            saveInvoice()
        })

        $('#barcode').on('blur', function (event) {
            event.preventDefault()
            varianValue(this.value);
        });



    })
</script>


