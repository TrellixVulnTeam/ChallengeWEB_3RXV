<script>
  const readData = () => {
    $.ajax({
      method: "GET",
      url: "http://localhost:3001/gudang",
      dataType: "json",
      headers: {
        json: true
      }
    }).done(function (data) {

      let html = ''
      data.forEach((item, index) => {
        html += `
        <tr>
          <td>${item.id_gudang}</td>
          <td>${item.nama_gudang}</td>
          <td>${item.alamat_gudang}</td>
          <td>
            <button type="button" class="btn btn-success btn-icon-text" id_data="${item.id_gudang}"><i class="mdi mdi-file-check btn-icon-append"></i></button>
            <button type="button" class="btn btn-danger btn-icon-delete" id_data="${item.id_gudang}"><i class="mdi mdi-trash-can btn-icon-append"></i></button>
          </td>
        </tr>
        `
      });
      $('table tbody').html(html)
    }).fail(function (err) {
      console.log("error", err)
      alert('gagal jquery')
    })
  }

  const saveData = (id_gudang, nama_gudang, alamat_gudang) => {
    $.ajax({
      method: "POST",
      url: `http://localhost:3001/gudang`,
      dataType: "json",
      headers: {
        json: true
      },
      data: { id_gudang, nama_gudang, alamat_gudang }
    }).done(function (response) {
      readData()
      $("#form-tambah").trigger("reset");
    }).fail(function (err) {
      alert('gagal pake jquery save')
    })
  }
  const saveEdit = (id_gudang, nama_gudang, alamat_gudang) => {
    $.ajax({
      method: "PUT",
      url: `http://localhost:3001/gudang/${id_gudang}`,
      dataType: "json",
      headers: {
        json: true
      },
      data: { nama_gudang, alamat_gudang }
    }).done(function (response) {
      readData()
      $('#id_gudangedit').val('')
      $("#form-edit").trigger("reset");
    }).fail(function (err) {
      alert('gagal pake jquery save')
    })
  }

  const editData = (id) => {
    $.ajax({
      method: "GET",
      url: `http://localhost:3001/gudang/${id}`,
      dataType: "json",
      headers: {
        json: true
      }
    }).done(function (data) {
      $('#id_gudangedit').val(data[0].id_gudang)
      $('#nama_gudangedit').val(data[0].nama_gudang)
      $('#alamat_gudangedit').val(data[0].alamat_gudang)
    }).fail(function (err) {
      alert('gagal pake jquery')
    })
  }

  const deleteData = (id) => {
    $.ajax({
      method: "DELETE",
      url: `http://localhost:3001/gudang/${id}`,
      dataType: "json",
      headers: {
        json: true
      }

    }).done(function (response) {
      readData()
    }).fail(function (err) {
      alert('gagal pake jquery')
    })
  }

  $(document).ready(function () {
    readData()

    $('#form-tambah').submit(function (event) {
      event.preventDefault();
      const id_gudang = $('#id_gudang').val()
      const nama_gudang = $('#nama_gudang').val()
      const alamat_gudang = $('#alamat_gudang').val()
      saveData(id_gudang, nama_gudang, alamat_gudang)
    })

    $('#form-edit').submit(function (event) {
      event.preventDefault();
      const id_gudang = $('#id_gudangedit').val()
      const nama_gudang = $('#nama_gudangedit').val()
      const alamat_gudang = $('#alamat_gudangedit').val()
      saveEdit(id_gudang, nama_gudang, alamat_gudang)
    })

    $('table tbody').on('click', '.btn-icon-text', function () {
      const id = $(this).attr('id_data')
      editData(id)

    })

    $('table tbody').on('click', '.btn-icon-delete', function () {
      const id = $(this).attr('id_data')
      deleteData(id)
    })

    $('#reset-form-tambah').click(function () {
      $("#form-tambah").trigger("reset");
      readData()
    })

    $('#reset-form-edit').click(function () {
      $("#form-edit").trigger("reset");
      readData()
    })


  })
</script>

