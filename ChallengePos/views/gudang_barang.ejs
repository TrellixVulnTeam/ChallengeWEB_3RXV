                    <textarea class="form-control" id="alamat_gudangedit" rows="4"></textarea>
                  </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button type="button" id="reset-form-edit" class="btn btn-dark">Cancel</button>
              </form>
            </div>
          </div>
