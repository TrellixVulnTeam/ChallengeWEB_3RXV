<script>
  var params = {
    display: 3,
    page: 1
  }
  const readData = () => {
    $.ajax({
      method: "GET",
      url: "http://localhost:3001/barang",
      dataType: "json",
      headers: {
        json: true
      }
    }).done(function (data) {

      let html = ''
      data.forEach((item, index) => {
        html += `
        <tr>
          <td>${item.id_barang}</td>
          <td>${item.nama_barang}</td>
          <td>
            <button type="button" class="btn btn-success btn-icon-text" id_data="${item.id_barang}"><i class="mdi mdi-file-check btn-icon-append"></i></button>
            <button type="button" class="btn btn-danger btn-icon-delete" id_data="${item.id_barang}"><i class="mdi mdi-trash-can btn-icon-append"></i></button>
          </td>
        </tr>
        `
      });
      $('table tbody').html(html)
    }).fail(function (err) {
      console.log("error", err)
      alert('gagal jquery')
    })
  }

  const saveData = (id_barang, nama_barang) => {
    $.ajax({
      method: "POST",
      url: `http://localhost:3001/barang`,
      dataType: "json",
      headers: {
        json: true
      },
      data: { id_barang, nama_barang }
    }).done(function (response) {
      readData()
      $("#form-tambah").trigger("reset");
    }).fail(function (err) {
      alert('gagal pake jquery save')
    })
  }
  const saveEdit = (id_barang, nama_barang) => {
    $.ajax({
      method: "PUT",
      url: `http://localhost:3001/barang/${id_barang}`,
      dataType: "json",
      headers: {
        json: true
      },
      data: { nama_barang }
    }).done(function (response) {
      readData()
      $('#id_barang').val('')
      $("#form-edit").trigger("reset");
    }).fail(function (err) {
      alert('gagal pake jquery save')
    })
  }

  const editData = (id) => {
    $.ajax({
      method: "GET",
      url: `http://localhost:3001/barang/${id}`,
      dataType: "json",
      headers: {
        json: true
      }
    }).done(function (data) {
      console.log(data)
      $('#id_barangedit').val(data[0].id_barang)
      $('#nama_barangedit').val(data[0].nama_barang)
    }).fail(function (err) {
      alert('gagal pake jquery')
    })
  }

  const deleteData = (id) => {
    $.ajax({
      method: "DELETE",
      url: `http://localhost:3001/barang/${id}`,
      dataType: "json",
      headers: {
        json: true
      }

    }).done(function (response) {
      readData()
    }).fail(function (err) {
      alert('gagal pake jquery')
    })
  }

  $(document).ready(function () {
    readData()

    $('#form-tambah').submit(function (event) {
      event.preventDefault();
      const id_barang = $('#id_barang').val()
      const nama_barang = $('#nama_barang').val()
      saveData(id_barang, nama_barang)
    })

    $('#form-edit').submit(function (event) {
      event.preventDefault();
      const id_barang = $('#id_barangedit').val()
      const nama_barang = $('#nama_barangedit').val()
      saveEdit(id_barang, nama_barang)
    })

    $('table tbody').on('click', '.btn-icon-text', function () {
      const id = $(this).attr('id_data')
      editData(id)

    })

    $('table tbody').on('click', '.btn-icon-delete', function () {
      const id = $(this).attr('id_data')
      deleteData(id)
    })

    $('#reset-form-tambah').click(function () {
      $("#form-tambah").trigger("reset");
      readData()
    })

    $('#reset-form-edit').click(function () {
      $("#form-edit").trigger("reset");
      readData()
    })


  })
</script>

